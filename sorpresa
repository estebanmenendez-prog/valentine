<script>
// CONTADOR
// PETALOS
const coloresss = ["#ff4d88","#ff0066","#ff6699","#ff1a75"];

function crearPetalo(){
    const petal = document.createElement("div");
    petal.classList.add("petal");
    petal.style.left = Math.random()*100+"vw";
    petal.style.background = coloress[Math.floor(Math.random()*coloress.length)];
    petal.style.animationDuration = (5+Math.random()*5)+"s";
    document.body.appendChild(petal);

    setTimeout(()=>petal.remove(),10000);
}

setInterval(crearPetalo,500);

document.addEventListener("touchstart", explosion);
document.addEventListener("click", explosion);

function explosion(e){
    const x = e.touches ? e.touches[0].clientX : e.clientX;
    const y = e.touches ? e.touches[0].clientY : e.clientY;

    for(let i=0;i<8;i++){
        const heart = document.createElement("div");
        heart.classList.add("click-heart");
        heart.innerHTML="‚ù§Ô∏è";
        heart.style.left = x+"px";
        heart.style.top = y+"px";
        document.body.appendChild(heart);

        setTimeout(()=>{
            heart.style.transform =
              `translate(${Math.random()*200-100}px, ${Math.random()*200-100}px) scale(1.5)`;
            heart.style.opacity=0;
        },10);

        setTimeout(()=>heart.remove(),1000);
    }
}

/*function calcularDias(){
const inicio=new Date("2024-01-12");
const hoy=new Date();
const dias=Math.floor((hoy-inicio)/(1000*60*60*24));
document.getElementById("counter").innerText=
"Han pasado "+dias+" d√≠as desde el 12 de enero de 2024 üíï";
}
calcularDias();*/

function actualizarContador(){
    const inicio = new Date("2024-01-12T00:00:00");
    const ahora = new Date();

    let diferencia = ahora - inicio;

    const dias = Math.floor(diferencia / (1000 * 60 * 60 * 24));
    diferencia -= dias * (1000 * 60 * 60 * 24);

    const horas = Math.floor(diferencia / (1000 * 60 * 60));
    diferencia -= horas * (1000 * 60 * 60);

    const minutos = Math.floor(diferencia / (1000 * 60));
    diferencia -= minutos * (1000 * 60);

    const segundos = Math.floor(diferencia / 1000);

    document.getElementById("counter").innerText =
        `${dias} d√≠as ${horas}h ${minutos}m ${segundos}s juntos üíï`;
}

// Ejecutar inmediatamente
actualizarContador();

// Actualizar cada segundo
setInterval(actualizarContador, 1000);


// TEXTO
const texto="Desde que te conoc√≠ eres la persona m√°s importante en mi vida, mi compa√±era de vida y de viajes, c√≥mo disfruto estar a tu lado ‚ù§Ô∏è";
let i=0;
function escribir(){
if(i<texto.length){
document.getElementById("typing").innerHTML+=texto.charAt(i);
i++;
setTimeout(escribir,40);
}}
escribir();

// HOJAS
const tree=document.querySelector(".tree");
const coloress=["#ff4d88","#ff0066","#ff6699","#ff1a75"];
for(let i=0;i<30;i++){
let leaf=document.createElement("div");
leaf.classList.add("leaf");
leaf.style.background=coloress[Math.floor(Math.random()*coloress.length)];
leaf.style.top=Math.random()*150+"px";
leaf.style.left=Math.random()*200+"px";
tree.appendChild(leaf);
}

// PETALOS
for(let i=0;i<40;i++){
let petal=document.createElement("div");
petal.classList.add("petal");
petal.style.left=Math.random()*100+"vw";
petal.style.animationDuration=(5+Math.random()*5)+"s";
petal.style.background=coloress[Math.floor(Math.random()*coloress.length)];
document.body.appendChild(petal);
}

// CORAZONES EXPLOSIVOS
document.addEventListener("click",function(e){
for(let i=0;i<8;i++){
let heart=document.createElement("div");
heart.innerHTML="‚ù§Ô∏è";
heart.style.position="absolute";
heart.style.left=e.pageX+"px";
heart.style.top=e.pageY+"px";
heart.style.fontSize="20px";
heart.style.transition="1s";
document.body.appendChild(heart);

setTimeout(()=>{
heart.style.transform=`translate(${(Math.random()*200-100)}px,${(Math.random()*200-100)}px)`;
heart.style.opacity=0;
},10);

setTimeout(()=>heart.remove(),1000);
}
});

// MODAL
function mostrarSorpresa(){
document.getElementById("modal").style.display="flex";
}
function cerrar(){
document.getElementById("modal").style.display="none";
}
function cerrardiv(){
document.getElementById("propuesta").style.display="none";
}

// PROPUESTA
function activarPropuesta(){
document.getElementById("propuesta").classList.add("show");
}
